-# TODO:リンクをcategoryモデルに対応
%li.level-1__list
  = link_to '#', class: 'level-1__list__item' do
    = category.name
  %ul.level-2
    - category.children.each do |child|
      %li.level-2__list
        = link_to '#', class: 'level-2__list__item' do
          = child.name
        %ul.level-3
          - child.children.each do |grandchild|
            %li.level-3__list
              = link_to '#', class: 'level-3__list__item' do
                = grandchild.name
